<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_signup.SignUp"

    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
       android:src="@drawable/robotsigninmain"
        tools:layout_editor_absoluteX="-81dp"
        tools:layout_editor_absoluteY="0dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/get_on_board"
        android:textColor="@color/textColour"


        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.227"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/getOnBoard"/>


    <EditText
        android:id="@+id/editTextEmailSU"
        android:layout_width="300dp"

        android:layout_height="50dp"


        android:layout_marginTop="200dp"

        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:textColor="@color/textColour"
        android:textColorHint="@color/textColour"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"

        app:layout_constraintEnd_toEndOf="parent"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextEmailSU"
        android:layout_marginTop="20dp"
        android:hint="@string/password"
        android:textColorHint="@color/textColour"
        android:textColor="@color/textColour"
        android:inputType="textPassword"
        android:id="@+id/editTextPasswordSU"

        />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPasswordSU"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:textColor="@color/textColour"
        android:text="@string/signup"

        android:onClick="CreateAccount"
        android:id="@+id/buttonSignIn"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="@string/already_have_account_sign_in"


        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:onClick="SighIN"
        android:id="@+id/textSignUp"

        />

    <ProgressBar
        android:id="@+id/progressbarsignup"
        android:visibility="gone"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />





</androidx.constraintlayout.widget.ConstraintLayout>